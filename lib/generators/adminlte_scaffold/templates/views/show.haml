.card.admin-table
  .card-header
    %h3.card-title= <%= class_name %>.model_name.human
  .card-body
    %table.table.table-bordered
      %tbody <% editable_attributes.each do |attribute| %>
        %tr
          %th= <%= class_name %>.human_attribute_name(:<%= attribute.name %>)
        %tr
          %td= @<%= singular_name %>.<%= attribute.name %>
      <% end -%>

  .card-footer
    = link_to _('Edit'), edit_admin_<%= singular_name %>_path(@<%= singular_name %>)
    = link_to _('Back'), admin_<%= plural_name %>_path
